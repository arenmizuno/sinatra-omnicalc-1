<h1>
  Calculate the payment
</h1>
<form action="/payment/results">
  <div>
    <label for="apr">
      APR
    </label>
    <input id="apr" type="text" name="users_apr" placeholder="E.g. 5.42">
  </div>

  <div>
    <label for="years">
      Number of years
    </label>
    <input id="years" type="text" name="users_years" placeholder="How many years to repay?">
  </div>

  <div>
    <label for="principal">
      Principal
    </label>
    <input id="principal" type="text" name="users_principal" placeholder="How much principal?">
  </div>

  <button> 
  Calculate monthly payment
  </button>
</form>
